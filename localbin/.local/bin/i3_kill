i3_kill() {
    do_not_kill=("dropdown-terminal")
    app_id="$(i3-msg -t get_tree 2>/dev/null | jq -r '.. | select(.focused?).window_properties.class')"

    for value in "${do_not_kill[@]}"; do
        if [[ $value == "$app_id" ]]; then
            exit 0
        fi
    done
    i3-msg kill
}

i3_kill
