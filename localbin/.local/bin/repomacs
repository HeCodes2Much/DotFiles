#Description:
#   run emacs in client mode
#
#Dependencies:
#   emacs
#

if command -v emacsclient &>/dev/null; then
    if ! pgrep -f "emacsclient" >/dev/null; then
        (
            emacsclient -c
        ) &
    else
        echo "repomacs already Running"
    fi
else
    echo "emacsclient can not be found"
fi