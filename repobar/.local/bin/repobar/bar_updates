#!/usr/bin/env bash
updates() {
  # load colors
  . ~/.config/repobar/bar_themes/minimal-mistakes

  updates=$(yay -Pn)
  icon=" î‚ª"

  if [ -z "$updates" ]; then
    printf " %s %s \n" "^c$Foreground^^b$Red^$icon" "^c$Foreground^^b$Red_Bright^ Fully Updated"
  else
    printf " %s %s \n" "^c$Foreground^^b$Red^$icon" "^c$Foreground^^b$Red_Bright^ $updates Updates"
  fi
}

updates
