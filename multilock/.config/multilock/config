# ~/.config/multilock/config

# default options
display_on=0
span_image=false
lock_timeout=300
fx_list=(dim blur dimblur pixel dimpixel color)
dim_level=40
blur_level=1
pixel_scale=10,1000
solid_color=333333
description=""
i3lockcolor_bin="i3lock-color"

if ! cmd_exists "$i3lockcolor_bin" && cmd_exists "i3lock"; then
    i3lockcolor_bin="i3lock"
fi

# default theme
loginbox=00000066
loginshadow=00000000
locktext="Type password to unlock..."
font="sans-serif"
ringcolor=ffffffff
insidecolor=00000000
separatorcolor=00000000
ringvercolor=ffffffff
insidevercolor=00000000
ringwrongcolor=ffffffff
insidewrongcolor=d23c3dff
timecolor=ffffffff
time_format="%H:%M:%S"
greetercolor=ffffffff
layoutcolor=ffffffff
keyhlcolor=d23c3dff
bshlcolor=d23c3dff
verifcolor=ffffffff
wrongcolor=d23c3dff
modifcolor=d23c3dff
bgcolor=000000ff
wallpaper_cmd="feh --bg-fill"
time_format="%H:%M:%S"

# custom prelock
prelock() {
	echof act "prelock screen..."

	# start away timer
    echo "$(date -u +%s)" > ~/.cache/multimonitorlock

}

# custom postlock
postlock() {
    echof act "postlock screen..."
    away_start="$(cat ~/.cache/multimonitorlock)"

	# show time away
	away_end="$(date -u +%s)"
	if [[ ! "$away_start" -gt "$away_end" ]]; then
		notify-send "Welcome Back" "You were gone for $(($away_end-$away_start)) seconds!"
	fi

}
