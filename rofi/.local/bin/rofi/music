# shellcheck disable=all

MUSICPLAYER="mplayer"
CURRENT_SONG=$(lsof -c "$MUSICPLAYER" | grep -F ".mp3" | awk -F"/" '{ print $NF; }' | cut -d'.' -f1)
PLAYING_MSG="Currently Playing :: ${CURRENT_SONG}"

for Song in "$HOME/Music/"*; do
    if [ -f "$Song" ]; then
        Name=${Song##*/}
        case $Name in
        *.mp3 | *.flac | *.wav | .ogg)
            options+=${Song##*/}$'\n'
            ;;
        esac
    fi
done
CHOICE=$(rofi -dmenu -no-custom -p "Muisc Player" -kb-custom-1 "Alt+Return" -mesg "${PLAYING_MSG}" "$@" <<ENDOPTS
${options::-1}
ENDOPTS
)

ret=$?

if [[ $ret -eq 0 ]]; then
    case $CHOICE in
        *.mp3 | *.flac | *.wav | *.ogg)
            folder=$HOME/Music
            pkill "$MUSICPLAYER"
            $MUSICPLAYER "$folder/$CHOICE" &
            ;;
        *)
            echo "Program terminated." && exit
            ;;
    esac
elif [[ $ret -gt 1 ]]; then
    if [[ $ret -eq 10 ]]; then
        pkill "$MUSICPLAYER"
    fi
fi