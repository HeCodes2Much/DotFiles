$exe_always picom -CGb --experimental-backend --config ~/.config/i3/picom.conf

## Category: Main Keybinds;
# Description: Toggle Picom;
$control_b+$alt+o \
    $exe ~/.config/polybar/scripts/picom-toggle.sh

#####################################################################################################################
#################                          Scratchpad                                               #################
#####################################################################################################################

# scratchpad {{{

# move the currently focused window to the scratchpad

## Category: Scratchpad;
# Description: Move focused window to scratchpad;
$super_b+$shift+minus \
    move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.

## Category: Scratchpad;
# Description: Show the next scratchpad window;
$super_b+minus \
    scratchpad show

#######################################################################
#################          active scratchpad          #################
#######################################################################

for_window [instance="(?i)dropdown-terminal"] floating enable
for_window [instance="(?i)dropdown-terminal"] resize set 800 600
for_window [instance="(?i)dropdown-terminal"] move scratchpad
$exe $TerminalEmulator --title="Dropdown-Terminal" --class="Dropdown-Terminal" --name="Dropdown-Terminal"

## Category: Scratchpad;
# Description: Toggle $TerminalEmulator;
$control_b+Return \
    [instance="(?i)dropdown-terminal"] scratchpad show, move position center

# }}} scratchpad

