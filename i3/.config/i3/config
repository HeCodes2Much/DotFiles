    bindsym --release w \
        $exe win-shot -w; mode "default"

    bindsym --release s \
        $exe win-shot -s; mode "default"

    bindsym --release f \
        $exe win-shot -f; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

